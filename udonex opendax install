	A	B
1
	Create new User on Server	
2
	sudo adduser app	
3
	YOUR PASSWORD	you can change anything
4
	sudo usermod -a -G sudo app	
5
		
6
	Install Mysql on Server	
7
	sudo apt update	
8
	sudo apt install mysql-server	
9
	sudo mysql_secure_installation	
10
	mysql -u root -p	GRANT ALL PRIVILEGES ON *.* TO 'root'@'%' IDENTIFIED BY 'YOUR PASSWORD' WITH GRANT OPTION;
11
		FLUSH PRIVILEGES;
12
	nano /etc/mysql/mysql.conf.d/mysqld.cnf	#bind-address = 127.0.0.1
#skip-networking
13
	/etc/init.d/mysql restart	
14
		
15
	Install Docker on Server	
16
	sudo apt update	
17
	sudo apt install apt-transport-https ca-certificates curl software-properties-common	
18
	curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -	
19
	sudo add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu bionic stable"	
20
	sudo apt update	
21
	apt-cache policy docker-ce	
22
	sudo apt install docker-ce	
23
	sudo systemctl status docker	
24
	sudo usermod -aG docker app	
25
		
26
	Install docker compose	
27
	curl -L "https://github.com/docker/compose/releases/download/1.23.1/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose	
28
	sudo chmod +x /usr/local/bin/docker-compose	
29
		
30
	Install Ruby on app user	
31
	sudo apt install curl 	
32
	curl -sL https://deb.nodesource.com/setup_12.x | sudo -E bash -	
33
	curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | sudo apt-key add -	
34
	echo "deb https://dl.yarnpkg.com/debian/ stable main" | sudo tee /etc/apt/sources.list.d/yarn.list	
35
	sudo apt-get update	
36
	sudo apt-get install git-core zlib1g-dev build-essential libssl-dev libreadline-dev libyaml-dev libsqlite3-dev sqlite3 libxml2-dev libxslt1-dev libcurl4-openssl-dev software-properties-common libffi-dev nodejs yarn	
37
	git clone https://github.com/rbenv/rbenv.git ~/.rbenv	
38
	echo 'export PATH="$HOME/.rbenv/bin:$PATH"' >> ~/.bashrc	
39
	echo 'eval "$(rbenv init -)"' >> ~/.bashrc	
40
	exec $SHELL	
41
	git clone https://github.com/rbenv/ruby-build.git ~/.rbenv/plugins/ruby-build 	
42
	echo 'export PATH="$HOME/.rbenv/plugins/ruby-build/bin:$PATH"' >> ~/.bashrc	
43
	exec $SHELL 	
44
	rbenv install 2.6.6	
45
	rbenv global 2.6.6	
46
	sudo snap install ruby --classic --channel=2.6/stable
